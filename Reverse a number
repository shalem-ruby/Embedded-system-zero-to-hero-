#include <stdio.h>

int main() {
    int n, reverse = 0, remainder;

    printf("Enter an integer: ");
    scanf("%d", &n);

    while (n != 0) {
        remainder = n % 10;          // Get the last digit
        reverse = reverse * 10 + remainder; // Append digit to reverse
        n = n / 10;                  // Remove the last digit
    }

    printf("Reversed number = %d", reverse);

    return 0;
}
