#include <stdio.h>

int main()
{
    int digit;
    printf("enter the number");
    scanf("%d",&digit);
    if (digit>0){
    printf("your number is positive");
    }
    else if(digit<0){
        printf("your number is negative");
    }
    else{
        printf("the number is zero.\n");
    }
return 0;    
}
